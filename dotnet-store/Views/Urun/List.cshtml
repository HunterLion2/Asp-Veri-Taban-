@model List<Urun>

<section class="mt-3">
    <div class="container">
        <h3 class="h4 mb-1 mb-lg-3">Ürün Listesi</h3>

        @if(Model.Count == 0) { // Burada Model.Count ifadesindeki Count listelenen değerleri belirtir burada sıfır yazdık yani liste içi 0 sa Ürün Bulunamadı Diyicek.
            <div class="alert alert-danger">Ürün Bulunumadı</div>
        }

        <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
            @foreach (var urun in Model)
            {
                <div class="col-3">
                    @await Html.PartialAsync("Partials/_UrunCard", urun)
                </div>
            }
        </div>
    </div>
</section>
